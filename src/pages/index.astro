---
import BlockCard from "@/components/BlockCard.astro"
import Layout from "@/layouts/Layout.astro"

const text = [
	{
		title: "Сообщества",
		style_ping: "bg-indigo-400",
	},
	{
		title: "Методы",
		style_ping: "bg-blue-400",
	},
	{
		title: "Прочее",
		style_ping: "bg-red-400",
	},
]

const text1 = [
	{
		title: "Сообщества",
		style: "rose",
	},
	{
		title: "Методы",
		style: "indigo",
	},
	{
		title: "Прочее",
		style: "green",
	},
	{
		title: "Методы",
		style: "violet",
	},
]
---

<Layout
	title="12 шагов"
	description="Интересная информация, материалы, методы прохождения двенадцати шагов, 50 видов сообществ и многое другое."
>
	<section
		class="flex bg-white rounded-full max-w-fit mx-auto px-6 py-3 gap-4 justify-center items-center"
	>
		{
			text &&
				text.map(item => (
					<div class="inline-flex items-center gap-2">
						<div class="relative">
							<div class={`w-2 h-2 rounded-full ${item.style_ping} animate-ping`} />
							<div class={`w-2 h-2 rounded-full ${item.style_ping} absolute inset-0`} />
						</div>
						<span class="font-medium text-zinc-700">{item.title}</span>
					</div>
				))
		}
	</section>

	<section
		class="bg-white grid sm:grid-cols-2 gap-6 grid-cols-1 p-6 rounded-xl w-full max-w-4xl mx-auto"
	>
		<BlockCard
			link="/communities"
			title="Список сообществ"
			icon="mdi:account-group"
			description="Список из 57 анонимных двенадцати шаговых сообществ."
		/>
		<BlockCard
			link="/methods"
			title="Методы шагов"
			icon="mdi:lightbulb-group"
			w
			description="Список разных методов прохождения двенадцати шагов."
		/>
		<BlockCard
			link="/archive"
			title="Архив"
			icon="mdi:math-integral-box"
			description="Посты, статьи, материалы и прочее."
		/>
		<BlockCard
			description="Скоро..."
			icon="mdi:account-details"
			style="border-green-200 bg-green-50 text-green-700"
			title="Генератор Преамбул"
			link="#"
		/>
		<!-- <BlockCard description="" icon="" style="" title="" /> -->
	</section>

	<!-- <section class="max-w-4xl w-full gap-1.5 mx-auto grid md:grid-cols-2 grid-cols-1">
		{
			text1 &&
				text1.map(item => (
					<div class={`h-[310px] w-full p-8 rounded-xl ${item.style}`}>
						<h2 class="text-xl font-bold tracking-tight">{item.title}</h2>
					</div>
				))
		}
	</section> -->
</Layout>
