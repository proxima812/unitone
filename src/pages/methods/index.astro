---
import Layout from "@/layouts/Layout.astro";
import MethodsCatalog from "@/components/MethodsCatalog.astro";
import { methodsByTitle } from "@/data/methods";

const methodsCatalog = methodsByTitle.map((item) => ({
	slug: item.slug,
	title: item.title,
	description: item.description,
	community: item.community,
}));
---

<Layout
	title="Методы"
	description={`Понятный каталог методов: ${methodsCatalog.length} вариантов с краткими фактами и отдельной подробной страницей по каждому методу.`}
>
	<MethodsCatalog methods={methodsCatalog} />
</Layout>
