---
import Layout from "@/layouts/Layout.astro"
import { getCollection } from "astro:content"

const archives = await getCollection("archive")
---

<Layout title="Архив 12 шагов" description="Посты, статьи, материалы и прочее.">
	<div class="grid grid-cols-1 gap-6 md:grid-cols-2">
		{
			archives &&
				archives.map(item => (
					<a href={`/archive/${item.id}/`} class="block relative">
						<article class="bg-white p-6 rounded-xl relative flex-col flex gap-3">
							<h2 class="leading-tight line-clamp-2 text-lg font-bold">
								{item.data.title}
							</h2>
							<p class="line-clamp-3">{item.data.description}</p>
							<div class="absolute right-[5.5px] top-0 rounded-xl bg-gradient-to-b  from-amber-300 to-red-300 h-full w-[4px]" />
							<div class="flex mt-2 justify-between items-center">
								<div class="flex gap-2 items-center">
									<div
										class={`${item.data.author === "UnitOne" ? "w-6 h-6 rounded-full bg-gradient-to-br from-black to-zinc-500" : "w-6 h-6 rounded-full bg-gradient-to-br from-green-500 to-green-400"}`}
									/>
									<span class="font-medium">{item.data.author}</span>
								</div>
								{item.data.pubDate && (
									<time datetime={item.data.pubDate} class="text-zinc-600">
										🗓
										{new Date(item.data.pubDate).toLocaleDateString("ru-RU", {
											year: "numeric",
											month: "numeric",
											day: "numeric",
										})}
									</time>
								)}
							</div>
						</article>
					</a>
				))
		}
	</div>
</Layout>
