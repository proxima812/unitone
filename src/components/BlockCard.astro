---
import { cn } from "@/utils/cn"
import { Icon } from "astro-icon/components"
const { style, title, textBtn, styleBtn, description, icon, link } = Astro.props
const { titleKey, textBtnKey, descriptionKey } = Astro.props
---

<article
	class={cn(
		"flex flex-col justify-between gap-3 rounded-xl p-4 bg-[color:var(--surface)] border-[0.6px] border-[color:var(--border)]",
		style,
	)}
>
	<div>
		<h2 class="text-lg mb-3 font-bold flex gap-1 items-center">
			{icon && <Icon name={icon} />}
			<span data-i18n={titleKey}>{title}</span>
		</h2>
		<p class="text-[color:var(--muted)]" data-i18n={descriptionKey}>
			{description}
		</p>
	</div>
	<a
		href={link}
		data-i18n={textBtnKey}
		class={cn(
			"text-white mt-1.5 px-3 py-1.5 max-w-fit bg-[color:var(--primary)] rounded-md hover:bg-[var(--sk-button-background-hover)] active:bg-[var(--sk-button-background-active)]",
			styleBtn,
		)}>{textBtn || "Подробнее"}</a
	>
</article>
