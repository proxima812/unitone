---
import Container from "./Container.astro"
import Logo from "./Logo.astro"
import Menu from "./Menu.astro"
---

<header
	id="header"
	class="top-0 md:top-5 z-50 sticky shadow-2xs py-5 mx-0 max-w-full md:w-[1010px] rounded-xl bg-white/60 backdrop-blur-lg mt-0 md:mt-5 md:mx-auto"
>
	<Container class="flex justify-between gap-x-3">
		<Logo />
		<Menu />
		<a
			target="_blank"
			href="https://t.me/legion_free"
			class="hidden bg-black tracking-tight text-white rounded-md px-3 py-1.5 md:flex gap-1.5 items-center"
		>
			<div
				class="w-4 h-4 rounded-full bg-gradient-to-br from-cyan-400 via-purple-200 to-red-500"
			>
			</div>
			<span>Обратная связь</span></a
		>
	</Container>
</header>

