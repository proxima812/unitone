---
import Container from "./Container.astro";
import Logo from "./Logo.astro";
import Menu from "./Menu.astro";
---

<header
	id="header"
	class="sticky top-0 z-50 mx-0 mt-0 max-w-full rounded-none border-b border-[color:var(--border)] bg-[color:var(--surface)]/92 py-4 backdrop-blur md:top-5 md:mx-auto md:mt-5 md:w-[1040px] md:rounded-2xl md:border"
>
	<Container class="flex justify-between gap-x-3">
		<Logo />
		<Menu />
	</Container>
</header>
